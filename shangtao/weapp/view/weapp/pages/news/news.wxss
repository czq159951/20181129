@import "../common/parse/parse.wxss";
page{
  width: 100vw;
  background: #F6F6F8;
}
.wst-container{
  width: 100vw;
}
.wst-main{
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}
.wst-omit{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  padding: 4rpx 6rpx 4rpx 6rpx;
  line-height: 40rpx;
}
.wst-main .time{
  width: 98%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  text-align: right;
  padding-right: 50rpx;
}
.wst-main .wst-border{
  width: 100%;
  height: 100%;
  margin-top: 5rpx;
}
.wst-main .title{
  width: 100%;
  height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.wst-main .wst-border .text{
  width: 100%;
  height: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  margin-left: 60rpx;
  line-height: 45rpx;
  margin-bottom: 15rpx;
}
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.4;  
  overflow: hidden; 
  border-top: 1rpx solid white; 
}
.wst-animationModel{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: white;
  top: 0rpx;
  border-top:2rpx solid  #F1F1F1;
  position: fixed;
  z-index: 1001;
}
.detailBox .icon{
  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
}
.wst-animationModel .wst-main2{
   margin-top: 0rpx;
}
.wst-animationModel .wst-main .wst-border .text1{
  width: 80%;
  height: auto;
  overflow: hidden;
  font-size: 35rpx;
  margin-left: 60rpx;
  line-height: 45rpx;
  margin-bottom: 15rpx;
}
.wst-box{
  width: 100%;
  height:280rpx;
  margin-top: 6px;
  background: white;
}
.wst-box .wst-top{
  width:100%;
  height: 86%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.wst-box .wst-image{
  width: 30%;
  height: 90%;
  margin: 8rpx;
   
}
.wst-box .wst-image image{
  width: 100%;
  height: 100%;
   
}
.wst-box .wst-content{
  width: 70%;
  height: 90%;
}
.wst-box .wst-content .wst-cont-top{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 46rpx;
}
.wst-box .wst-content .wst-cont-bot{
  color: #999;
  -webkit-line-clamp: 3;
  font-size: 30rpx;
}
.wst-bottom{
  color: #999;
  font-size: 24rpx;
   padding: 0 8rpx 0 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.wst-box-3{
  width: 100vw;
  height: 500rpx;
  }
.wst-box-3 .wst-top-3{
  line-height: 46rpx;
  width: 100%;
  height: 91%;
   padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
} 
.wst-box-3 .wst-top-3 .wst-content-3{
  width: 100%;
  height: 22%;
}
.wst-box-3 .wst-image-3{
  width: 99.8%;
  height: 76%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.wst-box-3 .wst-image-3 image{
  width: 99%;
  height:100%;
}
.like-model{
  width: 100vw;
  height: 60rpx;
  display: flex;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  justify-content: center;
  align-content: center;
}
.like-model .box{
  width: 200rpx;
  height: 60rpx;
  display: flex;
  font-size: 30rpx;
  border-radius:20rpx; 
  justify-content: flex-start;
  align-items: center;
  line-height: 80rpx;
  color:red;
  border: 1rpx solid red;
}
.like-model .box text{
  display: block;
  padding-top: 3rpx;
  padding-left: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.like-model .box .image{
  width: 50%;
   display: flex;
  justify-content: flex-end;
}
.like-model .box image{
  width: 40rpx;
  height: 40rpx;
}
::-webkit-scrollbar{
  height: 0;
  width: 0;
}
.detailBox{
  width: 100vw;
}
.main{
  width: 97vw;
  padding: 10rpx;
}
.wst-or-head{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  white-space:nowrap;
  background:white;
  border-top:  1rpx solid #f6f6f8;
  z-index: 1000;
  height:74rpx;
}
.wst-or-head .term{
  display: inline-block;
  width: 20%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
}
.wst-or-head .active{
  color:#de4943;
  border-bottom:  4rpx solid #de4943;
}
.remind-box{
  width: 100vw;
  height: 50vw;
  margin-top: 40vw;
  font-size: 32rpx;
  text-align: center;
  color: #222;
}
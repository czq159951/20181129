@import "../../../address-mng/addaddress/addaddress.wxss";
page{
  width: 99%;
  height: 80%;
  background: #F6F6F8;
}
.container{
  width: 100%;
  height: auto;
  position: relative;
}
.type-set{
  width: 100%;
  height: 92rpx;
  margin-top: 20rpx;
  background: white;
  display: flex;
  line-height: 92rpx;
  padding-left: 20rpx;
  font-size: 35rpx;
}
.address-set{
  width: 100%;
  height: 92rpx;
  background: white;
  display: flex;
  line-height: 92rpx;
  padding-left: 20rpx;
  font-size: 35rpx;
}
.address-set .set{
  margin-left: 10rpx;
} 
.address-set input{
  margin-left: 33rpx;
}
.number input{
  margin-left: 33rpx;
}
.type-set .border{
  width: 250rpx;
  height: 48rpx;
  border: 1rpx solid #7E7E7E;
  margin-top: 20rpx;
  margin-left: 20rpx;
  line-height: 48rpx;
  padding-left: 10rpx;
  display: flex;
  position: relative;
}
.type-set .border .icon{
  position: absolute;
  top: 0rpx;
  left: 220rpx;
  font-size: 28rpx;
}
.address-set .set{
   width: 550rpx;
}
/*按钮*/
.button{
  width: 90%;
  height: 80rpx;
  margin: 0rpx auto;
  margin-top: 20rpx;
}
.button button{
  width: 100%;
  height: 100%;
  line-height: 2.0;
  border-radius: 10rpx;
  background: #E00102;
  color: white;
}
/*下拉菜单*/
.menuList{
  position: fixed;
  top: 80rpx;
  left: 60rpx;
  z-index: 1002;
  width: 600rpx;
  height: 700rpx;
  background: white;
  overflow: hidden;
}
/*动画模块*/

/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.4;  
  overflow: hidden;  
} 
.animation{
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: white;
  z-index: 1001;
}
.wst-scroll{
  width: 100%;
  height: 100%;
}
.radio-group{
  width: 80%;
  height: auto;
  overflow: hidden;
  margin-left: 40rpx;
  font-size: 35rpx;
}
.radio-group .radio{
  width: 98%;
  height: auto;
  margin: 40rpx 0rpx 40rpx;
  display: flex;
}
.radio-group .radio .text{
  margin-left:40rpx;
  width: 100%;
  word-wrap:break-word;
  overflow: hidden;
  height: auto;
}
radio{
  width: 25rpx;
  height: 25rpx;
}
radio .wx-radio-input{
  width:40rpx;
  height: 40rpx;
}
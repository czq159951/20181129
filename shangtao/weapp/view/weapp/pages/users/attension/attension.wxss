page{
  width: 100%;
  height: 90%;
  background: #f6f6f8;
}
.container{
  width: 100%;
  height: 100%;
}
.commodityList{
  position: ralative;
}
.commodity{
  position: relative;
}
.commodityList .commodity{
  width: 100v;
  height: 230rpx;
  background: white;
  border-bottom: 1rpx solid #F1F1F1;
  overflow: hidden;
  margin-top: 15rpx;
  border: 1rpx solid transparent;
}
.commodityList .commodity icon{
  margin-top: 80rpx;
  margin-left: 20rpx;
   border: 1rpx solid transparent;
   float: left;
}
.commodityList .commodity .img{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-left: 10rpx;
  border: 1rpx solid transparent;
  margin-top: 10rpx;
}
.commodityList .commodity .img  image{
  width: 200rpx;
  height: 200rpx;
}
/*信息内容*/
.commodityList .details{
  width: 450rpx;
 display: flex;
 position: absolute;
 left: 255rpx;
 font-size: 30rpx;
 margin-top: 10rpx;
 margin-left: 10rpx;
 padding-left:30rpx;
 padding-right: 30rpx; 
 box-sizing: border-box;
 overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.commodityList .price{
  color: #FF241F;
  width: auto;
  height: 50rpx; 
  border: 1rpx solid transparent;
  position: absolute;
  left: 285rpx;
  top: 120rpx;
  font-size: 32rpx;
  margin-left: 10rpx;
}

.commodityList .number{
  width: auto;
  height: 50rpx;
  border: 1rpx solid transparent;
  position: absolute;
  left: 295rpx;
  top: 160rpx;
  font-size: 26rpx;
  text-align: center;
}

/*数量条*/
.commodityList .shopping{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  position: relative;
  left: 400rpx;
  top: 160rpx;
  overflow: hidden;
}
.commodity .shopping image{
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid transparent;
  margin-left: 0rpx;
  margin-top: 0rpx;
  
}
/*底部导航条*/
.navigation-bottom{
  width: 740rpx;
  height: 90rpx;
  border: 2rpx solid #f6f6f8;
  position: fixed;
  z-index: 999;
  left: 0rpx;
  bottom: -2rpx;
  background: white;
}
.navigation-bottom .icon{
  float: left;
  width: 50rpx;
  height: 50rpx; 
  margin-top: 25rpx;
  margin-left: 10rpx;
}
.navigation-bottom .content{
  float: left;
  width: auto;
  height: auto;
  margin-top: 20rpx;
  margin-left: 10rpx;
  color: black;
  font-size: 32rpx;
}
.navigation-bottom .amount{
  float: right;
  width: auto;
  height: auto;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.botton{
  margin-left: 10rpx;
  width: 170rpx;
  height: 60rpx;
  float: right;
  margin-top: 17rpx;
}
button {
  background: #E00102;
   height: 60rpx;
   box-sizing:content-box ;
   text-align: center;
   line-height:2.0;
   padding-left: 0rpx;
   padding-right: 0rpx;
}
button[size="mini"] {
display:inline-block;
line-height:2.0;
font-size:13px;
padding:0 1.34em;

}
.remind-model .button button {
  width:300rpx;
  height:70rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  text-align:center;
  background-color:#fff;
  color:#df0202;
  border-radius:6rpx;
  font-size:30rpx;
  border:2rpx solid #df0202;
}
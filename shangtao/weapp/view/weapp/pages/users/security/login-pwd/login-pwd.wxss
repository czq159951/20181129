page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 90%;
}
.form-model{
  margin-top: 15rpx;
  width: 100%;
  height: 27%;
}
.login-model{
  border-top: 16rpx solid #f6f6f8;
}
.login-item{
  display: flex;
  height: 72rpx;
  margin: 30rpx 60rpx;
  border:2rpx solid #a0a0a0;
  border-radius: 4rpx;
  font-size:28rpx;
}
.login-item input{
  width: 100%;
  padding:0 10rpx;
  height: 72rpx;
  line-height: 72rpx;
}
.login-item .verify{
  width: 320rpx;
  height: 72rpx;
}
.login-prompt{
  padding:20rpx 60rpx 0rpx 60rpx;
  font-size:28rpx;
}
.log-model{
  margin-top: 40rpx;
  height: 80rpx;
  margin: 0 60rpx;
}
.lo-button{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #e00102;
  color: white;
  border-radius: 6rpx;
  font-size:30rpx;
}
.lo-button:active,.lo-button[disabled][type="default"],.lo-button[disabled]:not([type]){
  color:#fff0f0;
  background:#f52f30;
  background-clip:padding-box;
}
/* pages/storesInfo/storesInfo.wxss */
@import "../attension-shops/attension-shops.wxss";
.wst-strip{
  width: 100%;
  height: 80rpx;
  border: 1rpx solid transparent;
  background: white;
}
.wst-strip .border{
  width: 96%;
  height: 100%;
  margin-left: 25rpx;
  border-bottom: 1rpx solid #E8E8E8;
}
.wst-strip icon{
  float: left;
  margin: 15rpx 20rpx 10rpx 13rpx;
}
.wst-strip .img{
  float: left;
  width: 45rpx;
  height: 45rpx;
  margin-top: 15rpx;
}
.wst-strip image{
  width: 100%;
  height: 100%;
}
.wst-strip .text{
  width: 540rpx;
  height: 45rpx;
  float: left;
  font-size: 30rpx;
  margin-top:18rpx;
  margin-left: 15rpx; 
  box-sizing: border-box;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}